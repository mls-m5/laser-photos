cpp = clang++-11

cppflags +=                 # c++ only flags
cflags +=                   # c only flags

config += modules

config += c++17 Wall
debug: config += debug      # Flags only used in "debug" confinguration

main.includes +=
    include
    lib/msl/include

main.src =
    src/*.cpp
    src/*.cppm

main.dir = bin



